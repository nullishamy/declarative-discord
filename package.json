{
  "name": "declarative-discord",
  "version": "1.0.0",
  "description": "A suite of tools for declarative management of Discord permissions.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently --kill-others --prefix [{name}] --names tsc,cleaner \"npm:build:watch\" \"npm:cleaner\"",
    "cleaner": "ts-cleaner --dist dist --watch",
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "author": "nullishamy",
  "license": "OSL3",
  "dependencies": {
    "@discordjs/rest": "^1.7.0",
    "deep-diff": "^1.0.2",
    "discord-api-types": "^0.37.37",
    "node-fetch": "^3.3.1",
    "typescript": "^4.9.5",
    "wasmoon": "^1.14.1",
    "yargs": "^17.7.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@types/deep-diff": "^1.0.2",
    "@types/node": "^18.11.19",
    "babel-jest": "^29.5.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.23.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "nodemon": "^2.0.20",
    "prettier": "2.8.7",
    "ts-cleaner": "^1.0.5",
    "ts-jest": "^29.1.0",
    "tsconfig": "^7.0.0"
  },
  "lint-staged": {
    "*.(ts|js)": [
      "eslint --cache --fix",
      "prettier"
    ]
  }
}
